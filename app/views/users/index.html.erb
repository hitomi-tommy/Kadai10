<div>
  <table>
  <tr>
    <th>ユーザー</th>
    <th>ユーザー画像</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= image_tag user.user_image.url if user.user_image.present? %></td>

    <td><%= link_to 'Show', user_path(user.id) %></td>
    <td><%= link_to 'Edit', edit_user_path(user.id) if current_user.id == user.id %></td>
    <td><%= link_to 'Destroy', user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } if current_user.id == user.id %></td>
  </tr>
<% end %>
  <%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
</div>
