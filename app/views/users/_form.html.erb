<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> 件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name,"ユーザー名" %>
  <%= f.text_field :name, placeholder:"姓名" %>
  <%= f.label :email,"メールアドレス"%>
  <%= f.email_field :email, placeholder:"メールアドレス" %>
  <%= f.label :password, "パスワード設定" %>
  <%= f.password_field :password,placeholder:"6文字以上" %>
  <%= f.label :password_confirmation, "パスワード再入力" %>
  <%= f.password_field :password_confirmation, placeholder:"6文字以上" %>
  <%= f.label :ユーザー画像 %>
  <%= f.file_field :user_image %>
  <br/>
  <%= f.submit "登録する" %>
<% end %>
