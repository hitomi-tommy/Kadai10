<div>
  <table>
  <tr>
    <th>ユーザー</th>
    <th>画像</th>
    <th>メッセージ</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.user.name %></td>
    <td><%= image_tag post.image.url %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post_path(post.id) %></td>

    <td><%= link_to 'Edit', edit_post_path(post.id) if current_user == post.user %></td>
    <td><%= link_to 'Destroy', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } if current_user == post.user %></td>
  </tr>
<% end %>
  <%= link_to 'Create New Post', new_post_path %>
</div>
